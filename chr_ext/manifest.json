{
  "manifest_version": 3,
  "name": "Text Helper",
  "version": "1.0",
  "description": "Summarize, paraphrase, and rewrite selected text",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "commands": {
    "summarize-selection": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Summarize selected text"
    },
    "define-selection": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Define selected text"
    },
    "feature-picker": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "Show AI Actions Picker Window"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
